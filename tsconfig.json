{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "outDir": "./dist/",
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "stripInternal": true
    },
    "include": [
        "eslint.customRule.ts",
        "global.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": ["dist", "node_modules", "public"]
}
